{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<section>
		<div class="header-content">
			<figure>
				<img id="header_img" src="{{asset('img/img-header.jpg')}}" alt="Yoga posture dans la montagne">
			</figure>
            <div class="header_info-blog">
				<h1 class="titre-blog">Contact <em>OM-NADA-BRAHMA</em></h1>
            </div>
		</div>
	</section>

	<div class="container-fluid mt-5">
		<div class="row d-flex justify-content-evenly">

			<div class="col-5 mt-5 mb-2">
				<div class="card p-3">
					{{ form_start(formContact) }}
					{{ form_errors(formContact) }}
						<h2 class="fs-3 mt-3">
							<strong>CONTACT</strong>
						</h2>
						<div class="row d-flex justify-content-arround">
							<div class="col-6 mb-2 mt-4">
								{{ form_row(formContact.name, { 'label': 'Nom' }) }}
							</div>
							<div class="col-6 mb-2 mt-4">
								{{ form_row(formContact.firstName, { 'label': 'Prénom' }) }}
							</div>
							<div class="col-12 mb-2 mt-4">
								{{ form_row(formContact.email) }}
							</div>
							<div class="col-12 mb-2 mt-4">
								{{ form_row(formContact.messageContent, { 'label': 'Votre message' }) }}
							</div>
							<div class="row">
								<div class="col-4 mt-4 mb-2">
									<p class="text-center">
									{{ form_row(formContact.submit, { 'label': 'Envoyer' }) }}
									</p>
								</div>
							</div>
						</div>
					{{ form_end(formContact) }}
				</div>
			</div>
			<div class="col-5 mt-5">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title text-center fs-3 mt-3 mb-3">COORDONNÉE</h5>
						<hr>
						<p class="card-text text-center fs-5 mt-4">Lucarelli Carine</p>
						<p class="card-text text-center fs-5">Soultz Haut-rhin</p>
						<p class="card-text text-center fs-5 mb-4">06.36.36.36.36</p>
					</div>
					<div class="col-md-4">
						<iframe class="p-lg-4" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2665.9096955595887!2d7.344154015832969!3d48.07338596360834!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479165c4bce4c059%3A0xed6664e3ee9fa083!2sRue%20du%20Tir%2C%2068000%20Colmar!5e0!3m2!1sfr!2sfr!4v1665081473739!5m2!1sfr!2sfr" width="300%" height="400" style="border:1;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				</div>
			</div>
				
		</div>

	</div>
{% endblock %}
