{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="container">
			<div class="register mb-5 mt-5">
				<div class="row">
					<h1 class="h3 mb-3 font-weight-normal">Connecter vous</h1>
					<div class="col-6 mb-4 mt-4">
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>
					<div class="col-6 mb-4 mt-4">
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>
					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					                        See https://symfony.com/doc/current/security/remember_me.html #}

					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me">
							Remember me
						</label>
					</div>
					<div class="h-captcha" data-sitekey="6LfjhJshAAAAACKbdNbmeVyalqm_hQWaYOsqSpUk"></div>
					<div class="row">
						<div class="col-4 mb-4 mt-4">
							<a class="mdpOublier" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
						</div>
					</div>
					<div class="col-4 mb-4 mt-4">
						<button class="btn btn-lg btn-primary" type="submit">Connexion</button>
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}