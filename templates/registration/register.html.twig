{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center mt-5 mb-4">Cr√©e un compte</h1>
    
    {{ form_start(registrationForm) }}
    <div class="container">
        <div class="register mb-5">
            <div class="row ">
                <div class="col-6 mb-4 mt-4">
                    {{ form_row(registrationForm.pseudo) }}
                </div>
                 <div class="col-6 mb-4 mt-4">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="col-12 mb-4 mt-4">
                    {{ form_row(registrationForm.img) }}
                </div>
                <hr>
                <div class="col-6 mb-4 mt-4">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="row">
                    <div class="col-6 mb-4 mt-4">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-4 mt-4">
                        {{ form_row(registrationForm.recaptcha) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn">Enregistrer compte</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
