{% extends 'base.html.twig' %}

{% block title %}Réponse livre d'or
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="mt-5 mb-5">Les posts utilisateurs
				</h2>
				<table id="table_id2" class="table table-striped mt-4 display">
					<thead>
						<tr class="bg-secondary">
							<th scope="col ">Répondue</th>
							<th scope="col ">user</th>
							<th scope="col ">date du post</th>
							<th scope="col ">post</th>
							<th scope="col ">répondre</th>
						</tr>
					</thead>
					<tbody>
						{% for post in posts %}
							{# {{ dump(post.replys[0])}} #}
							<tr>
								<td>
									{% for reply in post.replies %}
										{% if reply.sender.id %}
											<i class="fa-solid fa-circle color-green"></i>
										{% endif %}
									{% endfor %}
								</td>
								<td>{{post.user}}</td>
								<td>{{post.creationDate | date('d/m/Y H:m')}}</td>
								<td>{{post.contents}}</td>
								<td>
									<button type="button" class="btn btn-primary">
										<a href="{{ path('add_reply' , {'id': post.id}) }}">Répondre</a>
									</button>
								</td>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="mt-5 mb-5">Les posts utilisateurs
				</h2>
				<table id="table_id2" class="table table-striped mt-4 display">
					<thead>
						<tr class="bg-secondary">
							<th scope="col ">Répondue</th>
							<th scope="col ">user</th>
							<th scope="col ">date du post</th>
							<th scope="col ">post</th>
						</tr>
					</thead>
					<tbody>
						{% for reply in replys %}
							<tr>
								<td>{{reply.id}}</td>
								<td>{{reply.sender.id }}</td>
								<td>{{reply.recipient.id }}</td>
								<td>{{reply.content}}</td>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
